<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_recipe"
    app:startDestination="@id/recipeListFragment">

    <fragment
        android:id="@+id/recipeListFragment"
        android:name="com.luisfagundes.feature_recipe.presentation.list.RecipeListFragment"
        android:label="@string/label_home">
        <action
            android:id="@+id/action_homeFragment_to_recipeDetailsFragment"
            app:destination="@id/recipeDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/recipeDetailsFragment"
        android:name="com.luisfagundes.feature_recipe.presentation.details.RecipeDetailsFragment"
        android:label="@string/label_recipe_details">

        <argument
            android:name="recipeId"
            app:argType="integer" />
    </fragment>
</navigation>